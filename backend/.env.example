NODE_ENV=development
PORT=8080

# CORS
CORS_ORIGIN=http://localhost:5173

# App base URL for building absolute URLs (optional; mainly used for legacy local files)
# APP_BASE_URL=http://localhost:8080

# JSON Web Token
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=24h

# MongoDB
MONGODB_URI=mongodb://localhost:27017/ssbconnect

# CSRF
CSRF_HEADER_NAME=x-csrf-token

# Logging
LOG_LEVEL=info

# Supabase Storage (required for persistent uploads)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# Optional: use anon key in dev if service role is not available
# SUPABASE_ANON_KEY=your_anon_key
SUPABASE_BUCKET=avatars
# If true, signed URLs will be returned (expire after TTL). If false, public URL is returned.
SUPABASE_USE_SIGNED_URL=false
# Signed URL TTL (in seconds), default 7 days
SUPABASE_SIGNED_URL_TTL=604800
# Environment Configuration
NODE_ENV=development
PORT=8080

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ssbconnect
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ssbconnect
DB_USER=username
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
API_VERSION=v1
CORS_ORIGIN=http://localhost:9000

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (Resend preferred). Provide either RESEND_API_KEY, or SMTP_* for fallback
RESEND_API_KEY=
RESEND_FROM=SSB Connect <no-reply@yourdomain.com>
# Optional SMTP fallback
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=no-reply@yourdomain.com
